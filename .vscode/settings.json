{
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*.pzh.cpp": "${capture}.cpp",
        "*.cpp": "${capture}.exe"
    },

    "editor.fontLigatures": false,

    "files.associations": {
        "pzhelp": "cpp"
    },

    "[cpp]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-vscode.cpptools"
    }
}
